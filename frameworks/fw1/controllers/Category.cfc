component accessors="true" {	property name="categoryService";	property name="validationService";	public Category function init(fw){		variables.fw = arguments.fw;		return this;
	}	// default item	public void function index(rc){						variables.fw.redirect('category.list');	}		public void function list(rc){		rc.categories = categoryService.list();	}		public void function edit(rc){		param name="rc.category_id" default="";				if( !structKeyExists(rc,"category") ){	        rc.category = categoryService.get( rc.category_id );					}	}			public void function save(rc){		rc.category = variables.fw.populate(categoryService.get(rc.category_id));				var result = validationService.validate(rc.category);				if( !result.hasErrors() ){			categoryService.save(rc.category);			rc.success = "Category Saved!";			variables.fw.redirect('category.list','success');			} else {			rc.errors = result.getErrorMessages();			variables.fw.redirect('category.edit','errors,category');					}		
	}}